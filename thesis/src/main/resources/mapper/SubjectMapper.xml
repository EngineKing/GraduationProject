<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thesis.dao.SubjectDao">
    <!--新增学科-->
    <insert id="addSubject" parameterType="com.thesis.entity.Subject" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_subject(name,description,department_id) VALUES (#{name},#{description},#{departmentId})
    </insert>

    <!--根据学科id查询学科信息-->
    <select id="getSubjectById" resultType="com.thesis.entity.Subject">
        SELECT * FROM tb_subject WHERE id=#{subjectId}
    </select>

    <!--通过学科id删除学科-->
    <delete id="deleteSubjectById">
        DELETE FROM tb_subject WHERE id=#{subjectId}
    </delete>

    <!--更新学科信息-->
    <update id="updateSubject" parameterType="com.thesis.entity.Subject">
        UPDATE tb_subject SET name=#{name}, description=#{description},department_id=#{departmentId} where id=#{id}
    </update>

    <!--分页查询-->
    <select id="pageQuery" resultType="com.thesis.entity.Subject">
        SELECT * FROM tb_subject
        <bind name="offset" value="(query.pn-1)*query.ps"></bind>
        <where>
            <if test="subjectForm.name != null and subjectForm.name != ''">
                AND name LIKE CONCAT ('%',#{subjectForm.name},'%')
            </if>
            <if test="subjectForm.departmentId != null and subjectForm.departmentId != ''">
                AND department_id = #{subjectForm.departmentId}
            </if>
        </where>
        ORDER BY id DESC
        LIMIT #{offset},#{query.ps}
    </select>

    <!--查询满足条件的总数-->
    <select id="pageQueryCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM tb_subject
        <bind name="offset" value="(query.pn-1)*query.ps"></bind>
        <where>
            <if test="subjectForm.name != null and subjectForm.name != ''">
                AND name LIKE CONCAT ('%',#{subjectForm.name},'%')
            </if>
            <if test="subjectForm.departmentId != null and subjectForm.departmentId != ''">
                AND department_id = #{subjectForm.departmentId}
            </if>
        </where>
    </select>

    <!--通过学科名字获取学科信息-->
    <select id="getSubjectByName" resultType="com.thesis.entity.Subject">
        SELECT * FROM tb_subject WHERE name=#{subjectName}
    </select>
</mapper>